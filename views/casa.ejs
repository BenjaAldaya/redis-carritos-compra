<!-- views/casa.ejs -->
<%- contentFor('body') %>
<h1 class="mb-4"><i class="fas fa-store"></i> <%= nombreCasa %></h1>
<div class="row">
    <div class="col-md-8">
        <h2><i class="fas fa-clipboard-list"></i> Productos</h2>
        <ul class="list-group mb-4">
            <% productos.forEach(producto => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= producto.nombre %> - $<%= producto.precio.toFixed(2) %>
                    <form action="/carrito/agregar" method="POST" class="d-inline">
                        <input type="hidden" name="casaNombre" value="<%= nombreCasa %>">
                        <input type="hidden" name="productoNombre" value="<%= producto.nombre %>">
                        <input type="hidden" name="precio" value="<%= producto.precio %>">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="number" name="cantidad" value="1" min="1" class="form-control">
                            <button class="btn btn-primary" type="submit"><i class="fas fa-cart-plus"></i></button>
                        </div>
                    </form>
                </li>
            <% }); %>
        </ul>
        <form action="/casa/<%= nombreCasa %>/producto" method="POST" class="mb-4">
            <div class="input-group">
                <input type="text" name="nombre" class="form-control" placeholder="Nombre del producto" required>
                <input type="number" name="precio" class="form-control" placeholder="Precio" step="0.01" required>
                <button class="btn btn-success" type="submit"><i class="fas fa-plus"></i> Agregar Producto</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <a href="/carrito" class="btn btn-info btn-lg btn-block mb-4"><i class="fas fa-shopping-cart"></i> Ver Carrito</a>
        <a href="/" class="btn btn-secondary btn-lg btn-block"><i class="fas fa-arrow-left"></i> Volver a la lista de casas</a>
    </div>
</div>