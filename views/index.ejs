<!-- views/index.ejs -->
<%- contentFor('body') %>
<h1 class="mb-4"><i class="fas fa-home"></i> Casas de Comidas</h1>
<div class="row">
    <% casas.forEach(casa => { %>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= casa %></h5>
                    <a href="/casa/<%= casa %>" class="btn btn-primary"><i class="fas fa-door-open"></i> Entrar</a>
                </div>
            </div>
        </div>
    <% }); %>
</div>
<form action="/casa" method="POST" class="mt-4">
    <div class="input-group mb-3">
        <input type="text" name="nombre" class="form-control" placeholder="Nombre de la nueva casa" required>
        <button class="btn btn-success" type="submit"><i class="fas fa-plus"></i> Crear Nueva Casa</button>
    </div>
</form>